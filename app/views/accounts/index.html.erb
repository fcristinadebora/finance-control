<p style="color: green"><%= notice %></p>

<h1>Accounts</h1>

<div id="accounts">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Balance</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account| %>  
      <tr>
        <td>
          <%= account.id %>
        </td>
        <td>
          <%= account.name %>
        </td>
        <td>
          <%= account.currency_symbol %> <%= sprintf('%.2f', 0) %>
        </td>
        <td>
          <%= link_to "Show this account", account %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New account", new_account_path %>
